<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/search.css">
</head>
<body>
  
  <nav>
    <div class="logo">
        <img src="/images/logo.jpeg" alt="">
    </div>
        
    <div class="nav-content">
        <a href="/feed">Home</a>
        <a href="/feed">Explore</a>
        <a href="/profile">Create</a>
    </div>

    <form action="/search" method="get">
      <input type="text" placeholder="Search..." name="q" autocomplete="off"> <!-- Added name attribute for search term -->
      <button type="submit">Search</button>
  </form>
    
    <div class="profile">
      <a href="/profile">
        <img src="/images/profile.jpeg" alt="Profile Picture" width="30" height="30">
      </a>
       
       
    </div>
</nav>
<!-- searchResults.ejs -->



<div class="results-container">

  <!-- Display post search results -->
  <div>
    <h2>Posts </h2>
    <ul>
      <% posts.forEach(post => { %>
        <li class="post-container">
          <div class="post-content">
            <p><%= post.postText %></p>
            <img src="images/uploads/<%= post.image %>" alt="Post Image">
          </div>
        </li>
      <% }); %>
    </ul>
  </div>
</div>



</body>
</html>

